---
import {Picture} from 'astro:assets';
import AnimatedTitle from './AnimatedTitle.vue'
import AboutBackground from '../../public/img/about.webp';
---
<section class="w-scree min-h-screen relative" id="about">
    <article class="flex flex-col items-center mt-24 gap-5 relative mb-8">
        <h2 class="uppercase font-general text-sm">Welcome to zentry</h2>
        <AnimatedTitle client:visible title="Discover the world's <br/>largest shared adventure"
                       containerClass='!text-black !text-center'></AnimatedTitle>
        <div class="about-subtext text-center">
            <p>The Games of the Games begins-your life,now an epic MMORPG</p>
            <p>Zentry unites the every players from countless games and platforms,
                both digital and physical, into a unified Play Economy</p>
        </div>
    </article>
    <div id="clip" class="h-dvh w-screen">
        <div class="mask-clip-path about-image">
            <Picture class='absolute top-0 left-0 size-full object-cover' src={AboutBackground} format='webp'
                     alt="about_image"/>
        </div>
    </div>
</section>

