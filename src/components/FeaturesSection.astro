---
import BentoCard from "./BentoCard.astro";
---
<section class="pt-52  bg-black">
    <article class="container mx-auto px-3 md:px-10">
        <div>
            <p class="text-blue-75">Dive into the 'Game of Games' Universe</p>
            <p class="max-w-md font-circular-web text-lg text-blue-50 opacity-50">
                Immerse yourself in a rich and ever-expanding ecosystem where a vibrant array of products converge into
                an interconnected universe.
            </p>
        </div>
        <div class="border-hsla w-full relative mb-7 h-96 md:h-[65vh] overflow-hidden rounded-md mt-4 bento">
            <BentoCard :commingSoon="false" video="/videos/feature-1.mp4"
                       description="A cross plataform metagame app, turning your activities across Web2 and Web3 games into a rewarding aventure">
                RADIA<b>N</b>T
            </BentoCard>
        </div>
        <div class="grid md:grid-cols-2 grid-cols-1 h-[135vh] grid-rows-3 gap-2">
            <div class="bento-tilt_1 md:row-span-2 md:col-span-1 row-span-1 bento">
                <BentoCard :commingSoon="false" video="/videos/feature-2.mp4"
                           description="An anime and gaming-inspired NFT collection - the IP primed for expansion">
                    ZIG<b>M</b>A
                </BentoCard>
            </div>
            <div class="bento-tilt_1 ms-32 md:ms-0 h-full md:col-span-1 bento">
                <BentoCard :commingSoon="false" video="/videos/feature-3.mp4"
                           description="An anime and gaming-inspired NFT collection - the IP primed for expansion">
                    N<b>E</b>X<b>U</b>S
                </BentoCard>
            </div>
            <div class="bento-tilt_1 me-14 md:me-0 h-full md:col-span-1 bento">
                <BentoCard :commingSoon="false" video="/videos/feature-4.mp4"
                           description="An anime and gaming-inspired NFT collection - the IP primed for expansion">
                    AZ<b>U</b>L
                </BentoCard>
            </div>
            <div class="grid grid-cols-2 w-full col-span-2 gap-3">
                <div class="bento-tilt_2 bento">
                    <div class="flex size-full justify-between bg-violet-300 flex-col p-5">
                        <h1 class="special-font bento-title">
                            M<b>o</b>re <br/> Co<b>m</b>ing <br/> So<b>o</b>n
                        </h1>
                        <div class="flex w-full justify-end">
                            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill=""
                                 stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                                 class="icon icon-tabler icons-tabler-outline icon-tabler-location">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                <path d="M21 3l-6.5 18a.55 .55 0 0 1 -1 0l-3.5 -7l-7 -3.5a.55 .55 0 0 1 0 -1l18 -6.5"/>
                            </svg>
                        </div>
                    </div>
                </div>
                <div class="bento-tilt_2 bento">
                    <video autoplay muted loop src="/videos/feature-5.mp4"
                           class="size-full object-center object-cover"></video>
                </div>
            </div>
        </div>
    </article>
</section>
<script is:inline>
    const bentoSelector = document.querySelectorAll(".bento");

    function handleLeave(e){
        bentoSelector.style.transform= '';
    }
    bentoSelector.forEach((bento) => {
        bento.addEventListener('mousemove', (e)=>{
            const {width, height,top ,left} = bento.getBoundingClientRect();
            const relativeX = (e.clientX - left) / width;
            const relativeY = (e.clientY - top) / height;
            const tiltX = (relativeX - 0.5) * 12;
            const tiltY = (relativeY - 0.5) * -12;

            bento.style.transform = `rotateX(${tiltX}deg) rotateY(${tiltY}deg) perspective(700px) scale3d(0.98,0.98,0.98)`;

        });
        bento.addEventListener("mouseleave", ()=>{
            bento.style.transform=''
        })
    })

</script>